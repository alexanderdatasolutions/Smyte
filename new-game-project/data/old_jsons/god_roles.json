  "passive_templates": {
    "defender_passives": {
      "fortress_stance": {
        "id": "fortress_stance",
        "name": "Fortress Stance",
        "description": "Increases territory defense by 25% when health is above 50%",
        "effect_type": "conditional_defense",
        "value": 0.25,
        "condition": "hp_above_50"
      },
      "last_stand": {
        "id": "last_stand",
        "name": "Last Stand",
        "description": "Territory cannot be captured while this god is above 30% HP",
        "effect_type": "capture_prevention",
        "threshold": 0.3
      },
      "rallying_cry": {
        "id": "rallying_cry",
        "name": "Rallying Cry",
        "description": "Other defenders gain 10% stats",
        "effect_type": "team_buff",
        "value": 0.1,
        "targets": "other_defenders"
      },
      "elemental_bulwark": {
        "id": "elemental_bulwark",
        "name": "Elemental Bulwark",
        "description": "Reduces damage from opposing element by 30%",
        "effect_type": "damage_reduction",
        "value": 0.3,
        "condition": "opposing_element"
      },
      "retribution": {
        "id": "retribution",
        "name": "Retribution",
        "description": "Counterattacks have 30% chance when territory is attacked",
        "effect_type": "counter",
        "chance": 0.3
      }
    },
    
    "gatherer_passives": {
      "bountiful_harvest": {
        "id": "bountiful_harvest",
        "name": "Bountiful Harvest",
        "description": "20% chance for double resources each collection",
        "effect_type": "double_resources",
        "chance": 0.2
      },
      "essence_finder": {
        "id": "essence_finder",
        "name": "Essence Finder",
        "description": "Finds 5-10 extra divine essence per hour",
        "effect_type": "bonus_resource",
        "resource": "divine_essence",
        "min": 5,
        "max": 10,
        "interval": 3600
      },
      "crystal_prospector": {
        "id": "crystal_prospector",
        "name": "Crystal Prospector",
        "description": "3% chance to find divine crystals each hour",
        "effect_type": "rare_find",
        "resource": "divine_crystals",
        "chance": 0.03,
        "amount": 1
      },
      "efficient_collector": {
        "id": "efficient_collector",
        "name": "Efficient Collector",
        "description": "Reduces collection time by 25%",
        "effect_type": "speed_bonus",
        "value": 0.25
      },
      "powder_accumulator": {
        "id": "powder_accumulator",
        "name": "Powder Accumulator",
        "description": "Generates 1-3 matching element powder per hour",
        "effect_type": "powder_generation",
        "min": 1,
        "max": 3,
        "element_match": true
      }
    },
    
    "crafter_passives": {
      "powder_alchemist": {
        "id": "powder_alchemist",
        "name": "Powder Alchemist",
        "description": "Converts 10 low powder to 1 mid powder every 4 hours",
        "effect_type": "resource_conversion",
        "input": {"powder_low": 10},
        "output": {"powder_mid": 1},
        "cooldown": 14400
      },
      "buff_extender": {
        "id": "buff_extender",
        "name": "Buff Extender",
        "description": "Territory buffs last 30% longer",
        "effect_type": "duration_bonus",
        "value": 0.3,
        "targets": "territory_buffs"
      },
      "essence_refiner": {
        "id": "essence_refiner",
        "name": "Essence Refiner",
        "description": "Converts excess resources to divine essence at 10:1 ratio",
        "effect_type": "refine",
        "ratio": 10,
        "output": "divine_essence"
      },
      "awakening_catalyst": {
        "id": "awakening_catalyst",
        "name": "Awakening Catalyst",
        "description": "Reduces awakening material requirements by 15% for stationed gods",
        "effect_type": "cost_reduction",
        "value": 0.15,
        "applies_to": "awakening"
      },
      "relic_synthesizer": {
        "id": "relic_synthesizer",
